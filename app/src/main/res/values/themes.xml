<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IpcaLink" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#004E38</item>
        <item name="colorPrimaryVariant">#004E38</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00713D</item>
        <item name="colorSecondaryVariant">#00713D</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.IPCALinkLogin.Fullscreen" parent="Theme.IpcaLink">
        <item name="android:actionBarStyle">@style/Widget.Theme.I.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="ThemeOverlay.IPCALinkLogin.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">?attr/colorPrimary</item>
        <item name="fullscreenTextColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
</resources>